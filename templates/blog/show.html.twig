{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}-Hello BlogController!{% endblock %}

{% block body %}
    <section class="articles row">
            <div class="col m-3">
                <article class="card">
                    <img src="{{ article.image }}" class="card-img-top" alt="">
                    <div class="content card-body">
                        <h5 class="card-title">{{ article.title }}</h5>
                        <div class="metadata">
                            Ecrit le {{ article.createdAt | date('d/m/Y')}} a {{ article.createdAt | date('H:i') }} dans la categorie polityque.
                        </div>
                        <p class="card-text">{{ article.content }}</p>
                        <a href="{{ path('blog') }}" class="btn btn-primary">retour aux articles</a>
                            <a class="nav-link" href="{{ path('blog_edit', {'id': article.id}) }}">modifier un article</a>
                    </div>
                </article>
            </div>
    </section>
{% endblock %}
